<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.MembersController">
    <VBox spacing="20" style="-fx-padding:20;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <!-- Form Section -->
        <VBox spacing="10" style="-fx-background-color:white; -fx-padding:20; -fx-background-radius:10; -fx-border-radius:10; -fx-border-color:#ddd;">
            <HBox spacing="20">
                <!-- Left column -->
                <VBox spacing="10">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label prefWidth="100" text="Customer ID:" />
                        <TextField fx:id="txtMemberId" prefWidth="150" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label prefWidth="100" text="Name:" />
                        <TextField fx:id="txtName" prefWidth="150" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label alignment="TOP_LEFT" prefWidth="100" text="Address:" />
                        <TextArea fx:id="txtAddress" prefHeight="80" prefWidth="150" />
                    </HBox>
                </VBox>
                <!-- Middle column -->
                <VBox spacing="10">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label prefWidth="100" text="Phone #:" />
                        <TextField fx:id="txtPhone" prefWidth="150" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label prefWidth="100" text="Gender:" />
                        <ComboBox fx:id="cmbGender" prefWidth="150" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label prefWidth="100" text="Schedule:" />
                        <ComboBox fx:id="cmbSchedule" prefWidth="150" />
                    </HBox>
                </VBox>
                <!-- Right column -->
                <VBox spacing="10">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label prefWidth="100" text="Start Date:" />
                        <DatePicker fx:id="dpStartDate" prefWidth="150" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label prefWidth="100" text="End Date:" />
                        <DatePicker fx:id="dpEndDate" prefWidth="150" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label prefWidth="100" text="Status:" />
                        <ComboBox fx:id="cmbStatus" prefWidth="150" />
                    </HBox>
                </VBox>
            </HBox>
            <!-- Buttons -->
            <HBox alignment="CENTER_RIGHT" spacing="15" style="-fx-padding:10 0 0 0;">
                <Button fx:id="btnDashboard" onAction="#showDashboard" prefWidth="80" style="-fx-background-color:#312783; -fx-text-fill:white;" text="Dashboard" />
                <Button fx:id="btnAdd" prefWidth="80" style="-fx-background-color:#312783; -fx-text-fill:white;" text="Add" />
                <Button fx:id="btnClear" prefWidth="80" style="-fx-background-color:#312783; -fx-text-fill:white;" text="Clear" />
                <Button fx:id="btnUpdate" prefWidth="80" style="-fx-background-color:#312783; -fx-text-fill:white;" text="Update" />
                <Button fx:id="btnDelete" prefWidth="80" style="-fx-background-color:#312783; -fx-text-fill:white;" text="Delete" />
            </HBox>
        </VBox>
        <!-- Table Section -->
        <VBox style="-fx-background-color:white; -fx-padding:10; -fx-background-radius:10; -fx-border-color:#ddd; -fx-border-radius:10;" VBox.vgrow="ALWAYS">
            <TableView fx:id="tableMembers">
                <columns>
                    <TableColumn fx:id="colMemberId" prefWidth="100" text="Customer ID" />
                    <TableColumn fx:id="colNameCol" prefWidth="150" text="Name" />
                    <TableColumn fx:id="colAddressCol" prefWidth="200" text="Address" />
                    <TableColumn fx:id="colPhoneCol" prefWidth="100" text="Phone #" />
                    <TableColumn fx:id="colGenderCol" prefWidth="100" text="Gender" />
                    <TableColumn fx:id="colScheduleCol" prefWidth="100" text="Schedule" />
                    <TableColumn fx:id="colStartDateCol" prefWidth="100" text="Start Date" />
                    <TableColumn fx:id="colEndDateCol" prefWidth="100" text="End Date" />
                    <TableColumn fx:id="colStatusCol" prefWidth="100" text="Status" />
                </columns>
            </TableView>
        </VBox>
    </VBox>
</AnchorPane>
