<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.ProfileController">
    <VBox spacing="20" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
          style="-fx-padding:20; -fx-background-color:white; -fx-background-radius:10; -fx-border-color:#ddd; -fx-border-radius:10;">
        <!-- Profile Form -->
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints minWidth="100" halignment="RIGHT" />
                <ColumnConstraints minWidth="200" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="30" />
                <RowConstraints minHeight="30" />
                <RowConstraints minHeight="30" />
                <RowConstraints minHeight="30" />
                <RowConstraints minHeight="30" />
                <RowConstraints minHeight="80" />
            </rowConstraints>

            <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtFullName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtEmail" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Phone:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtPhone" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Date of Birth:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <DatePicker fx:id="dpDob" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Gender:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cmbGender" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Address:" GridPane.rowIndex="5" GridPane.columnIndex="0" alignment="TOP_RIGHT"/>
            <TextArea fx:id="txtAddress" GridPane.rowIndex="5" GridPane.columnIndex="1" prefHeight="80" />
        </GridPane>

        <!-- Action Buttons -->
        <HBox spacing="15" alignment="CENTER_RIGHT">
            <Button fx:id="btnSave" text="Save" prefWidth="100" style="-fx-background-color:#312783; -fx-text-fill:white;"/>
            <Button fx:id="btnCancel" text="Cancel" prefWidth="100"/>
            <Button fx:id="btnDashboard" text="Dashboard" prefWidth="100" style="-fx-background-color:#312783; -fx-text-fill:white;" onAction="#showDashboard"/>
        </HBox>
    </VBox>
</AnchorPane>
