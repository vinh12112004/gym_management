<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.CoachesController">
    <HBox spacing="20" style="-fx-padding:20; -fx-background-color: white;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <!-- Form -->
        <VBox prefWidth="300" spacing="10">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label prefWidth="80" text="Coach ID:" />
                <TextField fx:id="txtCoachId" prefWidth="200" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label prefWidth="80" text="Name:" />
                <TextField fx:id="txtName" prefWidth="200" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label alignment="TOP_LEFT" prefWidth="80" text="Address:" />
                <TextArea fx:id="txtAddress" prefHeight="100" prefWidth="200" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label prefWidth="80" text="Gender:" />
                <ComboBox fx:id="cmbGender" prefWidth="200" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label prefWidth="80" text="Phone #:" />
                <TextField fx:id="txtPhone" prefWidth="200" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label prefWidth="80" text="Status:" />
                <ComboBox fx:id="cmbStatus" prefWidth="200" />
            </HBox>
            <HBox alignment="CENTER" spacing="20" style="-fx-padding:10 0 0 0;">
                <Button fx:id="btnAdd" prefWidth="100" style="-fx-background-color: #312783; -fx-text-fill: white;" text="Add" />
                <Button fx:id="btnUpdate" prefWidth="100" style="-fx-background-color: #312783; -fx-text-fill: white;" text="Update" />
            </HBox>
            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="btnDashboard" onAction="#showDashboard" prefWidth="100" style="-fx-background-color: #312783; -fx-text-fill: white;" text="Dashboard" />
                <Button fx:id="btnDelete" prefWidth="100" style="-fx-background-color: #312783; -fx-text-fill: white;" text="Delete" />
            </HBox>
        </VBox>
        <!-- Table -->
        <TableView fx:id="tableCoaches" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colCoachId" prefWidth="80" text="Coach ID" />
                <TableColumn fx:id="colName" prefWidth="120" text="Name" />
                <TableColumn fx:id="colAddress" prefWidth="200" text="Address" />
                <TableColumn fx:id="colGender" prefWidth="80" text="Gender" />
                <TableColumn fx:id="colPhone" prefWidth="100" text="Phone #" />
                <TableColumn fx:id="colStatus" prefWidth="80" text="Status" />
            </columns>
        </TableView>
    </HBox>
</AnchorPane>
