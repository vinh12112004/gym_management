<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gymapp.controller.MainController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #3498db; -fx-padding: 12;">
         <children>
            <Label text="Gym Management System" textFill="WHITE">
               <font>
                  <Font name="Arial Bold" size="20.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="userLabel" textFill="WHITE">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14;" text="Logout">
               <padding>
                  <Insets bottom="8.0" left="12.0" right="12.0" top="8.0" />
               </padding>
            </Button>
         </children>
      </HBox>
   </top>
   <left>
      <VBox prefWidth="220.0" style="-fx-background-color: #2c3e50;">
         <children>
            <Button fx:id="dashboardBtn" mnemonicParsing="false" onAction="#showDashboard" prefWidth="220.0" style="-fx-background-color: transparent; -fx-text-fill: #ecf0f1; -fx-alignment: center-left; -fx-padding: 16; -fx-font-size: 14;" text="Dashboard">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Button>
            <Button fx:id="equipmentBtn" mnemonicParsing="false" onAction="#showEquipment" prefWidth="220.0" style="-fx-background-color: transparent; -fx-text-fill: #ecf0f1; -fx-alignment: center-left; -fx-padding: 16; -fx-font-size: 14;" text="Equipment">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Button>
            <Button fx:id="membersBtn" mnemonicParsing="false" onAction="#showMembers" prefWidth="220.0" style="-fx-background-color: transparent; -fx-text-fill: #ecf0f1; -fx-alignment: center-left; -fx-padding: 16; -fx-font-size: 14;" text="Members">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Button>
            <Button fx:id="staffBtn" mnemonicParsing="false" onAction="#showStaff" prefWidth="220.0" style="-fx-background-color: transparent; -fx-text-fill: #ecf0f1; -fx-alignment: center-left; -fx-padding: 16; -fx-font-size: 14;" text="Staff">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Button>
            <Button fx:id="packagesBtn" mnemonicParsing="false" onAction="#showPackages" prefWidth="220.0" style="-fx-background-color: transparent; -fx-text-fill: #ecf0f1; -fx-alignment: center-left; -fx-padding: 16; -fx-font-size: 14;" text="Packages">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Button>
            <Button fx:id="roomsBtn" mnemonicParsing="false" onAction="#showRooms" prefWidth="220.0" style="-fx-background-color: transparent; -fx-text-fill: #ecf0f1; -fx-alignment: center-left; -fx-padding: 16; -fx-font-size: 14;" text="Rooms">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Button>
            <Button fx:id="sessionsBtn" mnemonicParsing="false" onAction="#showSessions" prefWidth="220.0" style="-fx-background-color: transparent; -fx-text-fill: #ecf0f1; -fx-alignment: center-left; -fx-padding: 16; -fx-font-size: 14;" text="Workout Sessions">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Button>
            <Button fx:id="feedbackBtn" mnemonicParsing="false" onAction="#showFeedback" prefWidth="220.0" style="-fx-background-color: transparent; -fx-text-fill: #ecf0f1; -fx-alignment: center-left; -fx-padding: 16; -fx-font-size: 14;" text="Feedback">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Button>
            <Button fx:id="usersBtn" mnemonicParsing="false" onAction="#showUsers" prefWidth="220.0" style="-fx-background-color: transparent; -fx-text-fill: #ecf0f1; -fx-alignment: center-left; -fx-padding: 16; -fx-font-size: 14;" text="Users">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Button>
            <Button fx:id="profileBtn" mnemonicParsing="false" onAction="#showProfile" prefWidth="220.0" style="-fx-background-color: transparent; -fx-text-fill: #ecf0f1; -fx-alignment: center-left; -fx-padding: 16; -fx-font-size: 14;" text="Profile">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </left>
   <center>
      <StackPane fx:id="contentArea">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </StackPane>
   </center>
</BorderPane>
