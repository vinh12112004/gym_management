<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<VBox spacing="15.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gymapp.controller.MembershipPackage.MembershipPackageController">
    <children>
        <HBox spacing="10.0">
            <Button fx:id="addButton" text="Đăng ký/Gia hạn" onAction="#handleAdd"/>
            <Button fx:id="refreshButton" text="Làm mới" onAction="#refreshData"/>
        </HBox>
        <TableView fx:id="membershipPackageTable">
            <columns>
                <TableColumn fx:id="memberNameColumn" text="Hội viên"/>
                <TableColumn fx:id="packageNameColumn" text="Gói tập"/>
                <TableColumn fx:id="startDateColumn" text="Ngày bắt đầu"/>
                <TableColumn fx:id="endDateColumn" text="Ngày kết thúc"/>
                <TableColumn fx:id="priceColumn" text="Giá"/>
            </columns>
        </TableView>
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</VBox>