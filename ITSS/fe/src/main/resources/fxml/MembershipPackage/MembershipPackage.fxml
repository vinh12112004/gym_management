<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0" stylesheets="@../../css/content.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gymapp.controller.MembershipPackage.MembershipPackageController">
    <children>
        <HBox spacing="10.0">
            <Button fx:id="addButton" onAction="#handleAdd" text="Đăng ký/Gia hạn" />
            <Button fx:id="refreshButton" onAction="#refreshData" text="Làm mới" />
        </HBox>
        <TableView fx:id="membershipPackageTable">
            <columns>
                <TableColumn fx:id="memberNameColumn" prefWidth="97.0" text="Hội viên" />
                <TableColumn fx:id="packageNameColumn" prefWidth="129.0" text="Gói tập" />
                <TableColumn fx:id="startDateColumn" prefWidth="154.0" text="Ngày bắt đầu" />
                <TableColumn fx:id="endDateColumn" prefWidth="150.0" text="Ngày kết thúc" />
                <TableColumn fx:id="priceColumn" prefWidth="102.0" text="Giá" />
                <TableColumn fx:id="coachNameColumn" prefWidth="474.0" text="Huấn luyện viên" />            </columns>
        </TableView>
    </children>
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
</VBox>
