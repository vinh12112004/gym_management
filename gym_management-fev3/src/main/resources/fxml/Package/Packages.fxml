<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gymapp.controller.Package.PackageController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label text="Package Management">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAdd" text="Add Package" />
            <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#refreshData" text="Refresh" />
         </children>
      </HBox>
      <TableView fx:id="packageTable" prefHeight="400.0">
        <columns>
          <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID">
               <cellValueFactory>
                  <PropertyValueFactory property="id" />
               </cellValueFactory>
            </TableColumn>
          <TableColumn fx:id="nameColumn" prefWidth="200.0" text="Name">
               <cellValueFactory>
                  <PropertyValueFactory property="name" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="priceColumn" prefWidth="100.0" text="Price">
               <cellValueFactory>
                  <PropertyValueFactory property="price" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="durationColumn" prefWidth="120.0" text="Duration (Months)">
               <cellValueFactory>
                  <PropertyValueFactory property="durationMonths" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status">
               <cellValueFactory>
                  <PropertyValueFactory property="status" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="descriptionColumn" prefWidth="250.0" text="Description">
               <cellValueFactory>
                  <PropertyValueFactory property="description" />
               </cellValueFactory>
            </TableColumn>
        </columns>
      </TableView>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Button fx:id="editButton" disable="true" mnemonicParsing="false" onAction="#handleEdit" text="Edit" />
            <Button fx:id="deleteButton" disable="true" mnemonicParsing="false" onAction="#handleDelete" text="Delete" />
         </children>
      </HBox>
      <ProgressIndicator fx:id="progressIndicator" visible="false" />
   </children>
</VBox>
