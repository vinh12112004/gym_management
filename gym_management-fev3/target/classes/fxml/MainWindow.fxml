<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gymapp.controller.MainController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
         <children>
            <Label text="Gym Management System" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="userLabel" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" text="Logout" />
         </children>
      </HBox>
   </top>
   <left>
      <VBox prefWidth="200.0" style="-fx-background-color: #34495e;">
         <children>
            <Button fx:id="dashboardBtn" mnemonicParsing="false" onAction="#showDashboard" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: center-left; -fx-padding: 15;" text="Dashboard" />
            <Button fx:id="equipmentBtn" mnemonicParsing="false" onAction="#showEquipment" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: center-left; -fx-padding: 15;" text="Equipment" />
            <Button fx:id="membersBtn" mnemonicParsing="false" onAction="#showMembers" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: center-left; -fx-padding: 15;" text="Members" />
            <Button fx:id="packagesBtn" mnemonicParsing="false" onAction="#showPackages" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: center-left; -fx-padding: 15;" text="Packages" />
            <Button fx:id="roomsBtn" mnemonicParsing="false" onAction="#showRooms" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: center-left; -fx-padding: 15;" text="Rooms" />
            <Button fx:id="sessionsBtn" mnemonicParsing="false" onAction="#showSessions" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: center-left; -fx-padding: 15;" text="Workout Sessions" />
            <Button fx:id="feedbackBtn" mnemonicParsing="false" onAction="#showFeedback" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: center-left; -fx-padding: 15;" text="Feedback" />
            <Button fx:id="usersBtn" mnemonicParsing="false" onAction="#showUsers" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: center-left; -fx-padding: 15;" text="Users" />
         </children>
      </VBox>
   </left>
   <center>
      <StackPane fx:id="contentArea">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </StackPane>
   </center>
</BorderPane>
